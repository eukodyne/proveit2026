[Unit]
Description=Manufacturing RAG Docker Compose
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/devmaster/manufacturing-rag/manufacturing-rag
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
User=devmaster

[Install]
WantedBy=multi-user.target
